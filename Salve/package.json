{
  "name": "psicologo-site",
  "version": "1.0.0",
  "private": true,
  "description": "Site estático do psicólogo Rafael Marrero Brignol",
  "scripts": {
    "dev": "lite-server",
    "dev:dist": "lite-server --baseDir=dist",
    "clean": "rm -rf dist && mkdir -p dist",
    "copy:html": "cp index.html dist/index.html",
    "minify:css": "cleancss -o dist/styles.css styles.css",
    "minify:js": "terser main.js -o dist/main.js --compress --mangle",
    "build": "npm run clean && npm run copy:html && npm run minify:css && npm run minify:js"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "lite-server": "^2.6.1",
    "terser": "^5.31.6"
  }
}
